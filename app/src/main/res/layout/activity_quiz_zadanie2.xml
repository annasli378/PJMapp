<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_green"
    tools:context=".QuizTaskActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtNumerZadania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPolecenie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scrl_view_zad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <VideoView
                        android:id="@+id/videoView_p2"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="300dp" />

                    <Button
                        android:id="@+id/cameraBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#2CC9ED9E"
                        android:drawableTop="@android:drawable/ic_menu_camera"
                        android:fadingEdge="horizontal|vertical"
                        android:paddingBottom="16dp"
                        android:text="Kliknij tutaj aby rozpocząć pokazywanie" />

                   <!-- <Button
                        android:id="@+id/btn_pomin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#1D9829"
                        android:text="pomiń to zadanie"
                        app:backgroundTint="#1A7824" />-->

                    <RadioGroup
                        android:id="@+id/radioButton_p1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/radioButton1_A"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A" />

                        <RadioButton
                            android:id="@+id/radioButton1_B"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="B" />

                        <RadioButton
                            android:id="@+id/radioButton1_C"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="C" />

                        <RadioButton
                            android:id="@+id/radioButton1_D"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="D" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/radioButton_p2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/radioButton2_A"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:id="@+id/radioButton2_B"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:id="@+id/radioButton2_C"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:id="@+id/radioButton2_D"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </RadioGroup>

                    <Button
                        android:id="@+id/button_dalej"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#1D9829"
                        android:text="Dalej"
                        app:backgroundTint="#1D9829" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>