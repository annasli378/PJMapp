<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_green"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingTop="5dp"
        android:paddingEnd="2dp"
        android:paddingBottom="5dp"
        android:text="@string/info" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarStyle" android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_sprawdz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SprawdÅº"
            android:layout_weight="0.5"
            android:background="#1D9829"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
           />
        <Button
            android:id="@+id/button_start_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rozpocznij"
            android:layout_weight="0.5"
            android:background="#1D9829"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/preview_display_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/no_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/info2" />
    </FrameLayout>
</LinearLayout>
